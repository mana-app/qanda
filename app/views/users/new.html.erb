<% provide(:title, "新規登録") %>

<div class="main users-new">
    <div class="container">
        <div class="form-heading">アカウントを作成</div>
        <div class="form users-form">
            <div class="form-body">
                <% @user.errors.full_messages.each do |message| %>
                    <div class="form-error">
                        <%= message %>
                    </div>
                <% end %>

                <%= form_for(@user, :url => {:controller => :users, :action => :create}) do |f| %>
                    <%= f.label :name, "ユーザー名" %>
                    <%= f.text_field :name %>

                    <%= f.label :email, "メールアドレス" %>
                    <div style="font-size:12px;">
                        メール送信による認証はしていないため、適当な文字列でＯＫです。<br>
                        ただし、再ログイン時に使用するため、入力した内容は記録しておいてください。
                    </div>
                    <%= f.text_field :email %>

                    <%= f.label :password, "パスワード" %>
                    <%= f.password_field :password, :placeholder => "最低6文字必要です"%>

                    <%= f.label :password_confirmation, "もう一度パスワードを入力してください" %>
                    <%= f.password_field :password_confirmation %>

                    <%= f.submit "登録する"%>
                <% end %>
                <p><%= link_to("すでにアカウントをお持ちの方はこちら", "/login") %></p>
            </div>
        </div>
    </div>
</div>
